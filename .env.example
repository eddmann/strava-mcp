# Get these from https://www.strava.com/settings/api
STRAVA_CLIENT_ID=your_client_id_here
STRAVA_CLIENT_SECRET=your_client_secret_here

# =============================================================================
# stdio Mode Configuration (only needed if using --transport stdio)
# =============================================================================

STRAVA_ACCESS_TOKEN=your_access_token_here
STRAVA_REFRESH_TOKEN=your_refresh_token_here

# =============================================================================
# HTTP Mode Configuration (only needed if using --transport http)
# =============================================================================

# Server host and port for HTTP mode
# STRAVA_MCP_HOST=127.0.0.1
# STRAVA_MCP_PORT=8000

# Base URL for OAuth callbacks (required for production deployments)
# For local development, this will be auto-generated as http://localhost:8000
# For production (Lambda, etc.), set this to your public URL
# STRAVA_MCP_BASE_URL=https://your-domain.com

# MCP path prefix (default: /mcp)
# STRAVA_MCP_PATH=/mcp

# OAuth scopes (comma-separated, defaults shown below)
# STRAVA_OAUTH_SCOPES=profile:read_all,activity:read_all,activity:read,profile:write

# Registered MCP OAuth clients (semicolon-separated)
# Format: client_id=redirect_uri1,redirect_uri2;another_client=uri
# ChatGPT client is registered by default
# STRAVA_MCP_OAUTH_CLIENTS=chatgpt=https://mcp.openai.com/v1/oauth/callback

# Session storage backend: "memory" (default) or "dynamodb"
# STRAVA_SESSION_BACKEND=memory

# DynamoDB configuration (only if STRAVA_SESSION_BACKEND=dynamodb)
# STRAVA_SESSION_TABLE=strava-mcp-sessions
# AWS_REGION=us-east-1
# STRAVA_SESSION_TTL_SECONDS=864000

# =============================================================================
# Common Settings
# =============================================================================

# Distance/elevation units: "meters" (default) or "feet"
STRAVA_MEASUREMENT_PREFERENCE=meters

# Path for route exports (GPX/TCX files)
# Defaults to ./exports if not set
ROUTE_EXPORT_PATH=./exports
